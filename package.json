{
  "name": "llmos-desktop",
  "version": "1.0.0",
  "description": "LLMos Desktop - AI-Native Operating System for Physical Computing",
  "private": true,
  "main": "electron/dist/main.js",
  "author": "Evolving Agents Labs",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && ELECTRON_DEV_MODE=true electron .\"",
    "electron:build": "npm run build && npm run electron:compile && electron-builder",
    "electron:build:win": "npm run build && npm run electron:compile && electron-builder --win",
    "electron:build:mac": "npm run build && npm run electron:compile && electron-builder --mac",
    "electron:build:linux": "npm run build && npm run electron:compile && electron-builder --linux",
    "postinstall": "node -e \"if(!process.env.VERCEL){require('child_process').execSync('electron-builder install-app-deps',{stdio:'inherit'})}\""
  },
  "dependencies": {
    "@isomorphic-git/lightning-fs": "^4.6.0",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@react-three/drei": "^9.92.0",
    "@react-three/fiber": "^8.15.0",
    "@wasmer/sdk": "^0.10.0",
    "autoprefixer": "^10.4.17",
    "axios": "^1.6.5",
    "clsx": "^2.1.0",
    "date-fns": "^3.0.6",
    "isomorphic-git": "^1.27.1",
    "lucide-react": "^0.309.0",
    "next": "14.1.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.104.0",
    "postcss": "^8.4.33",
    "pyodide": "^0.29.0",
    "quickjs-emscripten": "^0.29.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "reactflow": "^11.10.4",
    "recharts": "^2.10.3",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.1",
    "three": "^0.160.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/three": "^0.160.0",
    "assemblyscript": "^0.27.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5",
    "wait-on": "^8.0.0"
  },
  "optionalDependencies": {
    "serialport": "^12.0.0"
  },
  "build": {
    "appId": "com.evolvingagentslabs.llmos",
    "productName": "LLMos Desktop",
    "copyright": "Copyright (c) 2024 Evolving Agents Labs",
    "directories": {
      "output": "dist-electron",
      "buildResources": "assets"
    },
    "files": [
      ".next/**/*",
      "public/**/*",
      "electron/dist/**/*",
      "!node_modules/**/*",
      "node_modules/serialport/**/*",
      "node_modules/@serialport/**/*"
    ],
    "extraResources": [
      {
        "from": "public/sdk",
        "to": "sdk"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "public/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "public/icons"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
